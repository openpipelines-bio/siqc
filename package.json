{
  "name": "siqc",
  "version": "0.2.0",
  "description": "Generate standalone interactive QC reports from scientific data",
  "type": "module",
  "bin": {
    "siqc": "./cli.js"
  },
  "files": [
    "cli.js",
    "scripts/**/*",
    "plugins/**/*",
    "src/**/*",
    "index.html",
    "vite.config.ts",
    "tsconfig.json",
    "tailwind.config.ts",
    "postcss.config.js",
    "ui.config.json",
    "USAGE.md"
  ],
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "cli": "node cli.js",
    "generate-test-data": "node cli.js generate-test-data",
    "render": "node cli.js render",
    "compress": "node cli.js compress",
    "prettier": "prettier -w \"src/**/*.{js,ts,json,css,tsx,jsx}\" \"*.{js,ts,mjs}\"",
    "clean": "rm -rf dist .cache .temp node_modules src/data",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "qc",
    "quality-control",
    "bioinformatics",
    "data-visualization",
    "spatial-analysis",
    "progressive-loading",
    "interactive-reports",
    "single-cell",
    "genomics",
    "cli"
  ],
  "author": "OpenPipelines Bio",
  "homepage": "https://github.com/openpipelines-bio/siqc",
  "repository": {
    "type": "git",
    "url": "https://github.com/openpipelines-bio/siqc.git"
  },
  "bugs": {
    "url": "https://github.com/openpipelines-bio/siqc/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/lodash": "^4.17.14",
    "@types/node": "^22.10.7",
    "@types/pako": "^2.0.3",
    "@types/plotly.js-dist-min": "^2.3.4",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.2.2",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "terser": "^5.37.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.1.0",
    "vite-plugin-solid": "^2.11.0"
  },
  "dependencies": {
    "@kobalte/core": "^0.13.7",
    "@ralphsmith80/solid-plotly.js": "^0.0.1",
    "@solid-primitives/scheduled": "^1.5.0",
    "@tanstack/solid-form": "^1.12.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lodash": "^4.17.21",
    "pako": "^2.1.0",
    "plotly.js-dist-min": "^2.35.3",
    "solid-js": "^1.9.3",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "yargs": "^18.0.0"
  },
  "packageManager": "pnpm@10.9.0"
}
